@model TodoList

<div class="container my-3">
    <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1>Create List</h1>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="Name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="mb-3">
                    <label for="Description" class="form-label">Description</label>
                    <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="mb-3">
                    <label for="Date" class="form-label">Date</label>
                    <input type="date" class="form-control" id="Date" name="Date" value="@Model.Date">
                    <span class="text-danger" asp-validation-for="Date"></span>
                    <label for="Time" class="form-label">Time</label>
                    <input type="time" class="form-control" id="Time" name="Time" value="@Model.Time">
                </div>
                <div class="mb-3">
                    <label for="Img" class="form-label">Product Img</label>
                    <input type="file" class="form-control" id="Img" name="file" accept="image/*" onchange="previewImage(event)">
                    <div class="mt-3">
                        <img id="imgPreview" src="#" alt="Image Preview" style="max-width: 20%; height: auto; display: none;" />
                    </div>
                    <span class="text-danger" asp-validation-for="Img"></span>
                </div>
                <div class="mb-3">
                    <label for="Pdf" class="form-label">Attach PDF</label>
                    <input type="file" class="form-control" id="Pdf" name="pdfFile" accept="application/pdf">
                    <span class="text-danger" asp-validation-for="Pdf"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>

<script>
    function previewImage(event) {
        const imgPreview = document.getElementById('imgPreview');
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                imgPreview.src = e.target.result;
                imgPreview.style.display = 'block';
            }
            reader.readAsDataURL(file);
        } else {
            imgPreview.style.display = 'none';
            imgPreview.src = '';
        }
    }
</script>
